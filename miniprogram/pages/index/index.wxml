<guide wx:if="{{PageCur=='guide'}}"></guide>
<hot wx:if="{{PageCur=='hot'}}"></hot>
<about wx:if="{{PageCur=='about'}}"></about>

<view class="cu-bar tabbar bg-white shadow foot">
  <view class="action" bindtap="NavChange" data-cur="guide">
    <view class='cuIcon-cu-image'>
      <image src="/images/tabbar/basics{{PageCur=='guide'?'_cur':''}}.png"></image>
    </view>
    <view class="{{PageCur=='guide'?'text-green':'text-gray'}}">首页</view>
  </view>

  <view class="action" bindtap="NavChange" data-cur="hot">
    <view class='cuIcon-cu-image'>
      <image src="/images/tabbar/plugin{{PageCur=='hot'?'_cur':''}}.png"></image>
    </view>
    <view class="{{PageCur=='hot'?'text-green':'text-gray'}}">热门</view>
  </view>
 
  <view class="action" bindtap="NavChange" data-cur="about">
    <view class='cuIcon-cu-image'>
      <image src="/images/tabbar/about{{PageCur=='about'?'_cur':''}}.png"></image>
    </view>
    <view class="{{PageCur=='about'?'text-green':'text-gray'}}">我的</view>
  </view>
  
</view>